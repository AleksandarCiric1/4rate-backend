package com.example.backend4rate.repositories;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;
import com.example.backend4rate.models.entities.RestaurantEntity;
import java.util.List;
import java.util.Optional;

@Repository
public interface RestaurantRepository extends JpaRepository<RestaurantEntity, Integer> {
    List<RestaurantEntity> findByNameContainingIgnoreCase(String name);  
 
    List<RestaurantEntity> findByRestaurantCategoriesCategoryIdIn(List<Integer> categoryIds);
    Optional<RestaurantEntity> findById(Integer id);
}
